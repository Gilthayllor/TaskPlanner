@page "/Identity/Account/Login"
@model TaskPlanner.Areas.Identity.Pages.Account.LoginModel

@section Scripts {
    <script src="/scripts/jquery-validate/jquery.validate.min.js"></script>
    <script src="/scripts/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="login-container">
    <div class="content">
        <img src="/assets/taskPlannerLogo.svg" alt="TaskPlanner Logo" />
        <div class="form-container">
            <h1>Bem vindo de volta!</h1>

            <form class="login-form">
                <div class="form-group-account">
                    <div class="input-container">
                        <span class="material-symbols-outlined icon" style="font-size: 24px">email</span>
                        <div class="input">
                            <input asp-for="LoginViewModel.Email" class="edit-input" placeholder="E-mail" />
                        </div>
                    </div>
                    <span asp-validation-for="LoginViewModel.Email" class="account-text-danger"></span>
                </div>

                <div class="form-group-account">
                    <div class="input-container">
                        <span class="material-symbols-outlined icon" style="font-size: 24px">lock</span>
                        <div class="input">
                            <input asp-for="LoginViewModel.Password" class="edit-input" placeholder="Senha" />
                        </div>
                    </div>
                    <span asp-validation-for="LoginViewModel.Password" class="account-text-danger"></span>
                </div>

                <button class="btn-register" type="submit">
                    Login
                </button>
            </form>

            <a href="/Identity/Account/Register" class="register-link">Ainda não possui uma conta?</a>
        </div>
    </div>
    <div class="login-img"></div>
</div>
